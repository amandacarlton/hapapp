extends layout

block content
  div.title
  h1= title
  div.back
    form(action="/bars/new", method="post")
     div.select
      select.rating(id="rating" name="rating")
        option(value="") Rating
        option(value="5") 5
        option(value="4.5") 4.5
        option(value="4") 4
        option(value="3.5") 3.5
        option(value="3") 3
        option(value="2.5") 2.5
      p
      select.rating(id="neighborhood" name="neighborhood")
        option(value="") Neighborhoods
        option(value="Northeast") Northeast
        option(value="Southeast") Southeast
        option(value="Northwest") Northwest
        option(value="Southwest") Southwest
        option(value="Highland")  Highland
        option(value="CBD") CBD
        option(value="Curtis Park") Curtis Park
        option(value="Cherry Creek") Cherry Creek
        option(value="Lodo") Lodo
        option(value="Five Points") Five Points
        option(value="University") University
        option(value="Speer") Speer
        option(value="Capitol Hill") Capitol Hill
        option(value="Park Hill") Park Hill
        option(value="Lincoln Park") Lincoln Park
        option(value="Golden Triangle") Golden Triangle
        option(value="City Park") City Park
        option(value="Uptown") Uptown
      p
      input(type="submit" value="Find Bars")
    //- for item in allbars
    //-  div
    //-   a(href="/bars/"+ item._id) 
    //-     p= item.name
    //-   p= item.location.neighborhoods
    //-   p= item.rating
    
  
    form(action="/signup", method="post")
     div.create
      if (errorlist)
       div.red
        ul 
         for item in errorlist
          li= item
      h1 Create an Account
      p
        label(for="createfName") First Name: 
        input(type="text" name="createfName" id="createfName")
      p
        label(for="createlName") Last Name:
        input(type="text" name="createlName" id="createlName")
      p
        label(for="createEmail") Email: 
        input(type="text" name="createEmail" id="createEmail")
      p
        label(for="createPass") Password: 
        input(type="password" name="createPass" id="createPass")
      p
        input.createbutton(type="submit" value="Create Account")
      
    form(action="/login", method="post")
     div.login
      h1 Login to Account
      p
      label(for="loginEmail") Email: 
      input(type="text" name="loginEmail" id="loginEmail")
      p= message
      p
      label(for="loginPass") Password: 
      input(type="password" name="loginPass" id="loginPass")
      p= statement
      p
      input(type="submit" value="Login")
